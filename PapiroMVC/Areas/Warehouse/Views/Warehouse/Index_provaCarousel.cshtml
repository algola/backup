<div id="wrapper">
    <div id="bg"></div>
    <div id="carousel">
        <div>
            <img class="img-front" src="~/Content/Carousel/CustomerMani.jpg" width="500" height="350" />
            <img class="img-back" src="~/Content/Carousel/CustomerCoppia.jpg" width="350" height="275" />
