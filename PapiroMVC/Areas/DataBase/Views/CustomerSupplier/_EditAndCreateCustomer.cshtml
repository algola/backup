@using PapiroMVC.Validation
@model PapiroMVC.Models.Customer

@{    
    string strings = "~/Areas/DataBase/Views/CustomerSupplier/Strings";
    }

<div id="status"> @Scripts.Render("~/bundles/jqueryval")
@using (Ajax.BeginForm(new AjaxOptions { UpdateTargetId = "status", OnBegin = "showProcessingMsg", OnComplete = "hideProcessingMsg", OnSuccess="OnSuccess" })) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Customer</legend>

        @Html.HiddenFor(model => model.TimeStampTable) 
        @Html.HiddenFor(model => model.CodCustomerSupplier)        
        @Html.AlgolaEditorFor(model => model.BusinessName)
        @Html.AlgolaEditorFor(model => model.VatNumber)
        @Html.AlgolaEditorFor(model => model.TaxCode)

        @Html.HiddenFor(model => model.Outdated)    
        
        <br />
        <p>
                       
           <button type="button" onclick="Javascript:window.location.replace('@Url.Action("Index", "CustomerSupplier", new {Area="Database"})');">            
                <i class="icon-arrow-left"></i>    
                @HttpContext.GetLocalResourceObject(strings, "Cancel")
            </button>
            
             <button class="default" type="submit">
                 <i class="icon-save"></i>    
                 @HttpContext.GetLocalResourceObject(strings, "Save")
             </button>
            
        </p>
    </fieldset>
    
    
}


</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
