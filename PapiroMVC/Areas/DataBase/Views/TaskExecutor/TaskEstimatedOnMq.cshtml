@using PapiroMVC.Validation
@model PapiroMVC.Models.TaskEstimatedOnRun

@{
    string strings = "~/Areas/DataBase/Views/TaskExecutor/Strings";
    ViewBag.Title = (string)HttpContext.GetLocalResourceObject(strings, "TaskEstimatedOnMq");
}

<div id="status"> 

<h2>@ViewBag.Title</h2>

    @Scripts.Render("~/bundles/jqueryval")
@using (Ajax.BeginForm("TaskEstimatedOnMq", "TaskExecutor", new AjaxOptions { UpdateTargetId = "status", OnBegin = "ShowProcessingMsg", OnComplete = "HideProcessingMsg", OnSuccess="OnSuccess" }))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>TaskEstimatedOnMq</legend>

            @Html.Hidden("returnUrl",TempData["TaskExecutorIndex"])

            @Html.HiddenFor(model => model.TimeStampTable)
            @Html.HiddenFor(model => model.CodTaskExecutor)
            @Html.HiddenFor(model => model.CodTaskExecutorOn)

        <h3>@HttpContext.GetLocalResourceObject(strings, "StartingLabel")</h3>

            @Html.AlgolaEditorFor(model => model.StartingCost1)
            @Html.AlgolaEditorFor(model => model.StartingCost2)

            @Html.AlgolaEditorFor(model => model.CostForfait)
            @Html.EditorFor(model => model.CostForfaitForSheet)

        <h3>@HttpContext.GetLocalResourceObject(strings, "CostPerUnitLabel")</h3>
                
            @Html.AlgolaEditorFor(model => model.CostPerUnit)

            @Html.EditorFor(model => model.UseDifferentCostPerUnit)
        <div id="_listAvarageRunPerRunStep">
            @Html.Partial("_ListCostPerRunStep", Model)
        </div>
        <br />

            @Html.EditorFor(model => model.UseDifferentDeficitOnCostForWeightStep)

        <div id="_listDeficitForWeightStep">
            @Html.Partial("_ListDeficitOnCostForWeightStep", Model)
        </div>

        <h3>@HttpContext.GetLocalResourceObject(strings, "CostsLabel")</h3>

        <br />
        <p>
            <button type="button" onclick="Javascript:window.location.replace('@Url.Action((string)TempData["TaskExecutorIndex"], "TaskExecutor", new { Area = "Database" })');">
                <i class="icon-arrow-left"></i>
                @HttpContext.GetLocalResourceObject(strings, "Cancel")
            </button>


            <button class="default" type="submit">
                <i class="icon-save"></i>
                @HttpContext.GetLocalResourceObject(strings, "Save")
            </button> 

        </p>

    </fieldset>
}

    
</div>


@section footer {
    @Html.Partial("_footer")
}