@using PapiroMVC.Validation
@model List<PapiroMVC.Models.DocumentProduct>

@{
    ViewBag.Title = "EditDocumentProducts";
}

@{
    string strings = "~/Areas/Working/Views/Document/Strings";
  
    }

<h2>Nodificare il titolo con...</h2>


<div class="page-control" data-role="page-control">

    <span class="menu-pull"></span> 
    <div class="menu-pull-bar"></div>
    <!-- Tabs -->
    <ul>

         <li class="active"><a href="#frame0">@Html.T(strings, "ProductDescription")</a></li>

        @for (int i = 0; i < Model.Count; i++)
        { 
            <li><a href="#frame@((i+1).ToString())">
                
                @if(Model[i].Quantity != null)
                {
                    @Model[i].Quantity.ToString()
                }
                else
                {
                    @Html.Label("Quantità non impostata");
                }
                </a>
            </li>
        }

    </ul>

    <!-- Tabs content -->
    <div class="frames">

        <div class="frame active" id="frame@((0).ToString())">
            @Html.Label(Model.First().Product.ProductName)
        </div>
                    
        <!-- parts -->
        @for (int i = 0; i < Model.Count; i++)
        {
            ViewBag.IndexPart = i;

            <div class="frame" id="frame@((i+1).ToString())">
                @Html.EditorFor(model => model[i]);
            </div>
        }

        
    </div>
            
</div>


