@using PapiroMVC.Validation
@using PapiroMVC.Models
@model PapiroMVC.Models.PrintingZRollCostDetail
@{
    string strings = "~/Areas/Working/Views/Document/Strings";
}


<div class="container-fluid">
    <div class="row">

        <div class="well col-xs-12">

            @Html.HiddenFor(y => y.ProductPart.productpartprintings.FirstOrDefault().CalculatedSide1Gain, new { @class = "input-mini", id = "maxGain1" })
            @Html.HiddenFor(y => y.ProductPart.productpartprintings.FirstOrDefault().CalculatedSide2Gain, new { @class = "input-mini", id = "maxGain2" })

            <div class="container-fluid">

                <div class="row">
                    <div class="col-xs-4">
                        <h6 class="col-xs-12 control-label no-padding-left no-padding-bottom no-margin">@Html.T(strings, "FormatoEtichetta")</h6>
                        @Html.HiddenFor(y => y.ProductPart.Format, new { @class = "col-xs-12 input-mini", id = "ddPartFormatToShow" })

                        @Html.TextBoxFor(y => y.ProductPart.FormatDesc, new { @class = "col-xs-12 input-mini", id = "ddPartFormat" })
                    </div>


                    <div class="col-xs-4">
                        <h6 class="col-xs-12 control-label no-padding-left no-padding-bottom no-margin">@Html.T(strings, "InterspazioBanda")</h6>
                        @Html.TextBoxFor(y => y.ProductPart.DCut1, new { @class = "col-xs-12 input-mini", id = "ddPartDCut1" })

                    </div>

                    <div class="col-xs-4">
                        <h6 class="col-xs-12 control-label no-padding-left no-padding-bottom no-margin">@Html.T(strings, "InterspazioPasso")</h6>
                        @Html.TextBoxFor(y => y.ProductPart.DCut2, new { @class = "input-mini col-xs-12", id = "ddPartDCut2" })
                    </div>
                </div>

                <hr>


                <div class="row">
                    <div class="col-xs-4">
                    </div>

                    <div class="col-xs-4">
                        <h6 class="col-xs-12 control-label no-padding-left no-padding-bottom no-margin">@Html.T(strings, "MinDCut")</h6>
                        @Html.TextBoxFor(y => y.ProductPart.MinDCut, new { @class = "col-xs-12 input-mini", id = "ddPartMinDCut" })

                    </div>

                    <div class="col-xs-4">
                        <h6 class="col-xs-12 control-label no-padding-left no-padding-bottom no-margin">@Html.T(strings, "MaxDCut")</h6>
                        @Html.TextBoxFor(y => y.ProductPart.MaxDCut, new { @class = "input-mini col-xs-12", id = "ddPartMaxDCut" })
                    </div>
                </div>

            </div>

            <hr>
            <div class="container-fluid">

                <div class="row">
                    <div class="col-xs-4">
                    </div>

                    <div class="col-xs-4">
                        <h6 class="col-xs-12 control-label no-padding-left no-padding-bottom no-margin">@Html.LabelFor(y => y.Lateral)</h6>                       
                        @Html.TextBoxFor(y => y.Lateral, new { @class = "col-xs-12 input-mini", id = "lateral" })
                    </div>

                    <div class="col-xs-4">
                        @Html.EditorFor(y => y.ForceLateral, new { id = "forceLateral" })
                        @*<h6 class="col-xs-12 control-label no-padding-left no-padding-bottom no-margin">@Html.LabelFor(y => y.Lateral)</h6>
                        @Html.TextBoxFor(y => y.Lateral, new { @class = "col-xs-12 input-mini", id = "lateral" })*@
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
