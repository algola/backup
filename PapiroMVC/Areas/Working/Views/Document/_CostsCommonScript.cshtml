@{
    string strings = "~/Areas/Working/Views/Document/Strings";
}

<script type="text/javascript">
    function editCost(cellvalue, options, rowobject) {
       var link = '@Html.ActionLink((string)HttpContext.GetLocalResourceObject(strings, "Edit"), "EditCost", new {id= "-1"},new {@class=""})';

        return link.replace("-1", cellvalue);
    }

    function umFormatter(cellvalue, options, rowobject) {


        var link = "type";
        //RunTypeOfQuantity = 0,
        //MqWorkTypeOfQuantity = 1,
        //WeigthTypeOfQuantity = 2, //quantità e prezzo al kg
        //MqSheetTypeOfQuantity = 3,
        //RunLengthMlTypeOfQuantity = 4, //ml di stampa

        var fg = '@HttpContext.GetLocalResourceObject(strings, "UmFg")';
        var mq = '@HttpContext.GetLocalResourceObject(strings, "UmMq")';
        var nr = '@HttpContext.GetLocalResourceObject(strings, "UmNr")';
        var ml = '@HttpContext.GetLocalResourceObject(strings, "UmMl")';

        if (cellvalue == "0")
            return link.replace("type", fg);

        if (cellvalue == "1")
            return link.replace("type", mq);

        if (cellvalue == "2" || cellvalue == "5")
            return link.replace("type", nr);

        if (cellvalue == "3")
            return link.replace("type", nr);

        if (cellvalue == "4")
            return link.replace("type", ml);


        return link;

    }

    function blkFormatter(cellvalue, options, rowobject) {

        var link = '<i class="icon"></i>';

        if (cellvalue == "False")
            return link.replace("icon", "icon-unlock");

        if (cellvalue == "True")
            return link.replace("icon", "icon-lock");

        return link;

    }

    function InclFormatter(cellvalue, options, rowobject) {

        var link = '<i class="icon"></i>';

        if (cellvalue == "0")
            return link.replace("icon", "fa fa-check");

        if (cellvalue == "1")
            return link.replace("icon", "fa fa-sign-out");

        if (cellvalue == "2")
            return link.replace("icon", "fa fa-exclamation");

        return link;

    }

</script>