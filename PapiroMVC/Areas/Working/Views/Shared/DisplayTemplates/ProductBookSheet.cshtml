@using PapiroMVC.Validation
@model PapiroMVC.Models.ProductBookSheet

@{
    string strings = "~/Areas/Working/Views/Product/Strings";
  
    }


    @Html.AlgolaDisplayFor(model => model.Format)

        <br />

                @for (int i = 0; i < Model.ProductPartsPerView.Count; i++)
                {
                    ViewBag.IndexPart = i;                    
                    <h3>
                    
                        @{
                            switch (Model.ProductPartsPerView[i].TypeOfProductPart)
                            {
                                case PapiroMVC.Models.ProductPart.ProductPartType.ProductPartBookSheet:
                                    Html.T(strings, Model.ProductPartsPerView[i].TypeOfProductPart.ToString());
                                    break;
                                default:
                                    Html.T(strings, Model.ProductPartsPerView[i].TypeOfProductPart.ToString());                                    
                                    break;
                            }
                        }
                       
                    </h3>
                    @Html.DisplayFor(model => model.ProductPartsPerView[i])                            
                }
         <br />   

        <!-- ProductTasks -->
        @for (int i = 0; i < Model.ProductTasks.Count; i++)
        {
            @Html.DisplayFor(model => model.ProductTasksPerView[i])           
        }

        <br />                       
<br />

       
