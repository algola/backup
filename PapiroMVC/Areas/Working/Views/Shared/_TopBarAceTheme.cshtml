@*Generic TopBar Ace Theme*@
@using PapiroMVC.Validation

@{
    string strings = "~/Views/Shared/Strings";
    
    ViewBag.Title = (string)HttpContext.GetLocalResourceObject(strings, "AppTitle"); 
}

            <div class="navbar-container navbar-inner" id="navbar-container" style="background-color:purple">
				<div class="navbar-header pull-left">
					<a href="#" class="brand" style="margin-left:10px">
                        <small>
						    <i class="icon-group"></i>
                        </small>
						@Html.T(strings, "AppName") - @Html.T(strings, "OrderMenu")
					</a><!--/.brand-->
                </div>

                <div class="navbar-header pull-right" role="navigation" style="margin-right:20px">
					<ul class="nav ace-nav">
                        @if (Request.IsAuthenticated)
                        {   
						    <li class="green" style="float:left">
							    <a data-toggle="dropdown" class="dropdown-toggle" href="#">
								    <i id="invitationIcon" class="icon-envelope"></i>
								    <span id="invitation" class="badge badge-success"></span>
							    </a>

							    <ul class="pull-right dropdown-navbar dropdown-menu dropdown-caret dropdown-closer">
								    <li class="nav-header">
									    <i class="icon-envelope-alt"></i>
									    5 Messages
								    </li>

								    <li>
									    <a href="#">
										    <img src="~/Content/acetheme/assets/avatars/avatar.png" class="msg-photo" alt="Alex's Avatar" />
										    <span class="msg-body">
											    <span class="msg-title">
												    <span class="blue">Alex:</span>
												    Ciao sociis natoque penatibus et auctor ...
											    </span>

											    <span class="msg-time">
												    <i class="icon-time"></i>
												    <span>a moment ago</span>
											    </span>
										    </span>
									    </a>
								    </li>

								    <li>
									    <a href="#">
										    <img src="~/Content/acetheme/assets/avatars/avatar3.png" class="msg-photo" alt="Susan's Avatar" />
										    <span class="msg-body">
											    <span class="msg-title">
												    <span class="blue">Susan:</span>
												    Vestibulum id ligula porta felis euismod ...
											    </span>

											    <span class="msg-time">
												    <i class="icon-time"></i>
												    <span>20 minutes ago</span>
											    </span>
										    </span>
									    </a>
								    </li>

								    <li>
									    <a href="#">
										    <img src="~/Content/acetheme/assets/avatars/avatar4.png" class="msg-photo" alt="Bob's Avatar" />
										    <span class="msg-body">
											    <span class="msg-title">
												    <span class="blue">Bob:</span>
												    Nullam quis risus eget urna mollis ornare ...
											    </span>

											    <span class="msg-time">
												    <i class="icon-time"></i>
												    <span>3:15 pm</span>
											    </span>
										    </span>
									    </a>
								    </li>

								    <li>
									    <a href="#">
										    See all messages
										    <i class="icon-arrow-right"></i>
									    </a>
								    </li>
							    </ul>
						    </li>

						    <li class="light-blue" style="float:right">
							    <a data-toggle="dropdown" href="#" class="dropdown-toggle">
								    <img class="nav-user-photo" src="~/Content/acetheme/assets/avatars/avatar2.png" alt="User's Photo" />
								    <span class="user-info">
									    <small>@Html.T(strings, "Welcome")</small>
									    @User.Identity.Name
								    </span>

								    <i class="icon-caret-down"></i>
							    </a>

							    <ul class="user-menu pull-right dropdown-menu dropdown-yellow dropdown-caret dropdown-closer">
								    <li>
                                        @Html.ActionLinkImage(Html.T(strings,"EditProfileMenu"), "EditProfile", "Account", new { @class = "username", title = Html.T(strings,"EditProfileMenu"), area = "Account" }, "icon-cog")
                                    </li>

								    <li>
                                        @Html.ActionLinkImage(Html.T(strings, "ChangePasswordMenu"), "ChangePassword", "Account", new { @class = "username", title = "Change password", area = "Account" }, "icon-user")    
								    </li>

								    <li class="divider"></li>

								    <li>
                                        @Html.ActionLinkImage(@Html.T(strings,"LogOffMenu"), "LogOff", "Account", new { area = "Account" }, "icon-off")    
								    </li>
							    </ul>
						    </li>
                        }
                        else
                        {
                            //se non si è loggati propongo la possibilità di loggarsi o registrarsi                            
                            <li class="light-blue" style="float:right">
							    <a data-toggle="dropdown" href="#" class="dropdown-toggle">
								    <img class="nav-user-photo" src="~/Content/acetheme/assets/avatars/avatar2.png" alt="User's Photo" />
								    <span class="user-info">
									    <small>@Html.T(strings, "Start")</small>
                                        @Html.T(strings, "AppName")
								    </span>
                                
								    <i class="icon-caret-down"></i>
							    </a>

							    <ul class="user-menu pull-right dropdown-menu dropdown-yellow dropdown-caret dropdown-closer">
								    <li>                                  
                                        @Html.ActionLinkImage(Html.T(strings,"AccessAccount"), "Login", "Account", new { id = "loginLink" }, "icon-key")
								    </li>
								    <li>
                                        @Html.ActionLinkImage(Html.T(strings, "RegistrationAccount"), "Register", "Account", new { id = "registerLink" }, "icon-group")
								    </li>
							    </ul>
						    </li>
                        }
					</ul><!--/.ace-nav-->

				</div><!--/.container-fluid-->
			</div><!--/.navbar-inner-->
