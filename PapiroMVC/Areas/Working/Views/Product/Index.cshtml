@using Mvc.HtmlHelpers

@using PapiroMVC.Validation

@{
    string strings = "~/Areas/Working/Views/Product/Strings";
    //Prendo il titolo dal menù
    ViewBag.Title = Html.T(strings, "ListEstimate");
}

@section title{
    @Html.T(strings, "Products")
}

@section description{
    @Html.T(strings, "ProductsDesc")
}

<div id='productList'>
    @Html.Partial("_ListProduct")
</div>



@using (Html.BeginForm("Excel", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <input type="file" name="file" />
    <input type="submit" value="OK" />
}  


<div id='script'>
    @Html.Partial("_ListCommonScript")
</div>

