    function editProductNameGenerator(cellvalue, options, rowobject) {
        //var link = '@Html.ActionLink((string)HttpContext.GetLocalResourceObject(strings, "Details"), "EditProductNameGenerator", new {id= "-1"},new {@class="tbutton smalledit"})';
        var link = '@Html.ActionLinkImage((string)HttpContext.GetLocalResourceObject(strings, "Details"), "EditProductNameGenerator", "Product", new { area = "Working", id = "-1" }, "fa fa-book fa-fw")';
        return link.replace("-1", cellvalue);

    }

    function typeOfProduct(cellvalue, options, rowobject) {

        var link = "type";
        var bookSheetType = '@HttpContext.GetLocalResourceObject(strings, "ProductBookSingleSheetType")';
        var singleSheetType = '@HttpContext.GetLocalResourceObject(strings, "ProductSingleSheetType")';
        var blockSheetType = '@HttpContext.GetLocalResourceObject(strings, "ProductBlockSheetType")';

        if (cellvalue == "ProductBookSingleSheetType")
            return link.replace("type", bookSheetType);

        if (cellvalue == "ProductBlockSheetType")
            return link.replace("type", blockSheetType);

        if (cellvalue == "ProductSingleSheetType")
            return link.replace("type", singleSheetType);


        return link;
    }

    function typeOfMov(cellvalue, options, rowobject) {

        var link = "type";
        var unload = '@HttpContext.GetLocalResourceObject(strings, "UnloadType")'; //0
        var load = '@HttpContext.GetLocalResourceObject(strings, "LoadType")'; //1
        var order = '@HttpContext.GetLocalResourceObject(strings, "OrderType")'; //2
        var reserve = '@HttpContext.GetLocalResourceObject(strings, "ReserveType")';

        if (cellvalue == "0")
            return link.replace("type", unload);

        if (cellvalue == "1")
            return link.replace("type", load);

        if (cellvalue == "2")
            return link.replace("type", order);

        if (cellvalue == "3")
            return link.replace("type", reserve);


        return link;
    }

</script>

