    function editProduct(cellvalue, options, rowobject) {
        var link = '@Html.ActionLinkImage((string)HttpContext.GetLocalResourceObject(strings, "Details"), "EditProduct", "Document", new { area="Working",  id = "-1" }, "fa fa-book fa-fw")';
        return link.replace("-1", cellvalue);
    }

    function movProduct(cellvalue, options, rowobject) {
        var link = '@Html.ActionLinkImage((string)HttpContext.GetLocalResourceObject(strings, "Movments"), "EditProductOnlyMov", "Product", new { area = "Working", id = "-1" }, "fa fa-tags fa-fw")';
