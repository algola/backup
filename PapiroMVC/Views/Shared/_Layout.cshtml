<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        @*<meta name="viewport" content="width=device-width" />*@
        @Styles.Render("~/Content/themes/base/css", "~/Content/css", "~/Content/jqGridcss")
        
        <script src="~/Scripts/jquery-1.8.2.min.js"></script>
        <script src="~/Scripts/jquery-ui-1.9.0.min.js"></script>
        <script src="~/Scripts/modernizr-2.6.2.min.js"></script>
        <script src="~/Scripts/jquery.blockUI.js"></script>
               
        @Scripts.Render("~/bundles/jqgrid")                
                      
        <link href="@Url.Content("~/Content/jqsimplemenu.css")" rel="stylesheet" type="text/css" />
        <script src="@Url.Content("~/Scripts/jqsimplemenu.js")" type="text/javascript"></script>

        <script src="~/MetroUI/javascript/dropdown.js"></script>

    </head>
    

    <body class="metrouicss">

    <div class="page secondary with-sidebar">
        <div class="page-header">
            <div class="page-header-content">
                        @Html.Partial("_MenuDataBase")
                <div id="loadingIndicator">   
                    <img src="~/MetroUI/images/preloader-w8-line-black.gif" />
                </div>

            </div> 
        </div>
        
         @RenderSection("footer", required:false)

        <div class="page-region">
            <div class="page-region-content" style="min-height:300px">

            <div style="width:90%" id="body-container">
                @RenderSection("featured", required: false)
                @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <div style="position: fixed; bottom: 0px; width:100%">
        <div class="page">
            <div class="nav-bar">
                <div class="nav-bar-inner padding6">
                    <span class="element">
                        Papiro &copy; by <a class="fg-color-white" href="mailto:info@algola.com">Algola S.r.l.</a>
                    </span>
                </div>
            </div>
        </div>
    </div>
 
        @Scripts.Render("~/bundles/jquery")
        @RenderSection("Scripts", required: false)
       
        <script type="text/javascript">
        </script>

        @Html.Partial("_loading")

    </body>
</html>
